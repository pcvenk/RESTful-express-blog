<% include ./partials/header %>

<div class="ui raised very padded text container segment">
    <h2 class=" ui header center aligned">FORM</h2>
    <form method="POST"
          action="/blogs"
          class="ui form">
        <div class="field">
            <label>Blog Title</label>
            <input type="text" name="blog.title" placeholder="Enter Title">
        </div>

        <div class="field">
            <label>Image</label>
            <input type="text" name="blog.image" placeholder="Image URL">
        </div>

        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog.body"
                      cols="30"
                      rows="10"
                      placeholder="Fill in content">
            </textarea>
        </div>

        <button type="submit"
               class="ui teal basic button">Submit</button>
    </form>

</div>

<% include ./partials/footer %>