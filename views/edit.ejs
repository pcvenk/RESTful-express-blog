<% include ./partials/header %>

<div class="ui raised very padded text container segment">
    <h2 class=" ui header center aligned">Edit Blog - <%= blog.title %></h2>
    <form method="POST"
          action="/blogs/<%= blog._id %>?_method=PUT"
          class="ui form">
        <div class="field">
            <label>Blog Title</label>
            <input type="text" name="title" placeholder="Enter Title" value="<%= blog.title %>">
        </div>

        <div class="field">
            <label>Image</label>
            <input type="text" name="image" placeholder="Image URL" value="<%= blog.image %>">
        </div>

        <div class="field">
            <label>Blog Post</label>
            <textarea id="mytextarea" name="body" placeholder="Content goes here..."><%= blog.body %></textarea>
        </div>

        <input type="submit" class="ui teal basic button"></input>
    </form>

</div>

<% include ./partials/footer %>